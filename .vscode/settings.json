{
	"html.format.wrapAttributes": "aligned-multiple",
	"[php]": {
		"editor.defaultFormatter": "valeryanm.vscode-phpsab",
		"editor.formatOnSave": true
	},
	"intelephense.diagnostics.undefinedFunctions": false,
	"intelephense.files.exclude": [
		"**/.git/**",
		"**/.svn/**",
		"**/.hg/**",
		"**/.github-release/**",
		"**/.releases/**",
		"**/.DS_Store/**",
		"**/dist/**",
		"**/node_modules/**",
		"**/vendor/**"
	],
	"intelephense.files.maxSize": 3000000,
	"intelephense.stubs": [
		"apache",
		"bcmath",
		"bz2",
		"calendar",
		"com_dotnet",
		"Core",
		"ctype",
		"curl",
		"date",
		"dba",
		"dom",
		"enchant",
		"exif",
		"FFI",
		"fileinfo",
		"filter",
		"fpm",
		"ftp",
		"gd",
		"gettext",
		"gmp",
		"hash",
		"iconv",
		"imap",
		"intl",
		"json",
		"ldap",
		"libxml",
		"mbstring",
		"meta",
		"mysqli",
		"oci8",
		"odbc",
		"openssl",
		"pcntl",
		"pcre",
		"PDO",
		"pdo_ibm",
		"pdo_mysql",
		"pdo_pgsql",
		"pdo_sqlite",
		"pgsql",
		"Phar",
		"posix",
		"pspell",
		"readline",
		"Reflection",
		"session",
		"shmop",
		"SimpleXML",
		"snmp",
		"soap",
		"sockets",
		"sodium",
		"SPL",
		"sqlite3",
		"standard",
		"superglobals",
		"sysvmsg",
		"sysvsem",
		"sysvshm",
		"tidy",
		"tokenizer",
		"wordpress",
		"xml",
		"xmlreader",
		"xmlrpc",
		"xmlwriter",
		"xsl",
		"Zend OPcache",
		"zip",
		"zlib"
	],
	"php-docblocker.extra": ["@since ${###:4.0}"],
	"php-docblocker.classTemplate": {
		"myMessage": {
			"content": "Class ${###:Clasname}",
			"gapAfter": true
		},
		"extra": {}
	},
	"php-docblocker.functionTemplate": {
		"message": {
			"gapAfter": true
		},
		"extra": {},
		"param": {
			"gapBefore": true,
			"gapAfter": true
		},
		"return": {}
	},
	"php-docblocker.propertyTemplate": {
		"message": {
			"gapAfter": true
		},
		"extra": {},
		"var": {}
	},
	"phpGettersSetters.spacesAfterParam": 1,
	"phpGettersSetters.spacesAfterParamVar": 1,
	"phpGettersSetters.spacesAfterReturn": 1,
	"phpsab.executablePathCBF": "vendor/bin/phpcbf",
	"phpsab.executablePathCS": "vendor/bin/phpcs",
	"phpsab.snifferMode": "onType",
	"phpsab.standard": ".phpcs.xml.dist",

	// Disable the default formatter, use eslint instead
	"prettier.enable": false,
	"editor.formatOnSave": false,

	// Auto fix
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "never"
	},

	// Silent the stylistic rules in you IDE, but still auto fix them
	"eslint.rules.customizations": [
		{ "rule": "style/*", "severity": "off" },
		{ "rule": "*-indent", "severity": "off" },
		{ "rule": "*-spacing", "severity": "off" },
		{ "rule": "*-spaces", "severity": "off" },
		{ "rule": "*-order", "severity": "off" },
		{ "rule": "*-dangle", "severity": "off" },
		{ "rule": "*-newline", "severity": "off" },
		{ "rule": "*quotes", "severity": "off" },
		{ "rule": "*semi", "severity": "off" }
	],

	// Enable eslint for all supported languages
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"markdown",
		"json",
		"jsonc",
		"yaml",
		"toml"
	]
}
