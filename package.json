{
  "name": "include-fussball-de-widgets",
  "version": "0.0.0-development",
  "private": true,
  "description": "A WordPress plugin for easy integration of fussball.de widgets.",
  "homepage": "https://github.com/mheob/include-fussball-de-widgets#readme",
  "bugs": {
    "url": "https://github.com/mheob/include-fussball-de-widgets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mheob/include-fussball-de-widgets.git"
  },
  "license": "GPL-2.0-or-later",
  "author": "Alexander BÃ¶hm",
  "scripts": {
    "build": "rimraf dist && webpack && yarn run i18n",
    "clear": "rimraf dist",
    "commit": "git-cz",
    "dev": "yarn run build && node ./tasks/cp-dev-release.js",
    "i18n": "yarn run i18n:json && yarn run i18n:copy",
    "i18n:copy": "cpr src/languages dist/languages -d",
    "i18n:json": "wp i18n make-json src/languages/include-fussball-de-widgets-de_DE.po --no-purge",
    "i18n:pot": "wp i18n make-pot dist languages/include-fussball-de-widgets.pot --slug=include-fussball-de-widgets --domain=include-fussball-de-widgets --package-name=\"Include Fussball.de Widgets\"",
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:css:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:fix": "yarn run lint:css:fix && yarn run lint:js:fix",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:js:fix": "prettier-eslint \"$PWD/src/**/*.js\" --write",
    "hooks": "./init-gitkraken-hooks.sh",
    "postinstall": "husky install",
    "release": "yarn run build && yarn run release:copy && yarn run release:github",
    "release:copy": "cpr dist .releases/include-fussball-de-widgets/trunk/ -d",
    "release:github": "cpr dist .github-releases/include-fussball-de-widgets -d && cd .github-releases/ && bestzip include-fussball-de-widgets.zip include-fussball-de-widgets && rimraf include-fussball-de-widgets && cd ..",
    "semantic-release": "semantic-release",
    "start": "wp-scripts start",
    "test": "yarn run test:cs && yarn run test:phpunit:full",
    "test:cs": "./vendor/bin/phpcs",
    "test:phpunit": "./vendor/bin/phpunit --no-coverage",
    "test:phpunit:full": "./vendor/bin/phpunit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@hkdobrev/run-if-changed": "^0.3.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@wordpress/babel-preset-default": "^5.2.2",
    "@wordpress/browserslist-config": "^3.0.3",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.2.0",
    "@wordpress/scripts": "^15.0.1",
    "autoprefixer": "^10.3.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "bestzip": "^2.2.0",
    "commitizen": "^4.2.4",
    "copy-webpack-plugin": "^8.1.1",
    "cpr": "^3.0.1",
    "css-loader": "^5.2.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.1",
    "indent-string": "^5.0.0",
    "jest": "^27.0.6",
    "mini-css-extract-plugin": "^1.6.2",
    "pnp-webpack-plugin": "^1.7.0",
    "postcss-html": "^0.36.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.3.2",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "prettier-standard": "^16.4.1",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.2",
    "sass": "^1.36.0",
    "sass-loader": "^11.1.1",
    "semantic-release": "^17.4.4",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-order": "^4.1.0",
    "terser-webpack-plugin": "^5.1.4",
    "thread-loader": "^3.0.4",
    "webpack": "^5.47.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-livereload-plugin": "^3.0.1"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "./.releaserc.json"
  },
  "run-if-changed": {
    "yarn.lock": [
      "yarn install"
    ],
    "composer.lock": [
      "composer install"
    ],
    "cms/composer.lock": [
      "cd cms && composer install"
    ],
    "config/husky/**/*": [
      "yarn hooks"
    ]
  }
}
